// 1-hello.holo - Your First HoloScript Scene
// Start here! This is the simplest possible VR scene.

composition "My First VR World" {
  // Environment settings
  environment {
    skybox: "sunset"      // Beautiful sky backdrop
    ambient_light: 0.4    // How bright the scene is
  }

  // A glowing orb you can grab in VR
  object "FloatingOrb" {
    @grabbable  // Makes it grabbable with VR controllers
    @glowing    // Emits a soft glow
    
    position: [0, 1.5, -2]   // In front of you at eye level
    color: "#00ffff"         // Cyan color
    
    // When grabbed, glow brighter!
    on_grab: {
      this.glow_intensity = 2.0
    }
    
    // When released, dim down
    on_release: {
      this.glow_intensity = 0.5
    }
  }
}

