  object "Planet2" {
    geometry: "sphere"
    color: "#00FF00"
    scale: 0.5
    position: [10, 0, 0]
  }
  
  object "Planet3" {
    geometry: "sphere"
    color: "#0000FF"
    scale: 0.5
    position: [15, 0, 0]
  }
}
